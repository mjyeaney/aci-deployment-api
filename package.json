{
  "name": "aci-api-testing",
  "version": "1.0.0",
  "description": "Testing an API that will create an ACI instance on the fly.",
  "main": "./dist/server.js",
  "scripts": {
    "clean": "rm -rf ./dist/*",
    "build": "npm run clean && npm run compile && npm run setup-data && npm run build-ui && npm run copy-assets && npm run bump-asset-vers",
    "compile": "echo -n 'Compiling...' && tsc && echo 'Done!'",
    "build-ui": "rm -f ./dist/client/bundle.js && ./node_modules/browserify/bin/cmd.js ./dist/client/*.js -o ./dist/client/bundle.js && rm -f $(ls -d1 ./dist/client/*.js | grep -v bundle.js)",
    "setup-data": "cp -r ./src/data ./dist",
    "copy-assets": "rm -rf ./dist/static && cp -r ./src/static ./dist",
    "bump-asset-vers": "sed -i -e 's/?ver=TIMESTAMP/?ver='\"$(date +%s)\"'/' ./dist/static/index.html",
    "start": "cp ./.env ./dist && cd ./dist && node server.js",
    "build-deploy-zip": ". ./deploy/azure-zip-build.sh",
    "deploy": ". ./deploy/azure-zip-deploy.sh",
    "test": "cd ./dist && ../node_modules/mocha/bin/mocha ./tests/*/*.js --timeout 60000"
  },
  "author": "Mike Yeaney",
  "license": "MIT",
  "dependencies": {
    "@types/body-parser": "^1.17.1",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.1",
    "@types/jquery": "^3.3.31",
    "@types/mocha": "^5.2.7",
    "@types/proper-lockfile": "^4.1.1",
    "@types/uuid": "^3.4.5",
    "azure-arm-containerinstance": "^5.4.0",
    "azure-arm-resource": "^7.3.0",
    "body-parser": "^1.19.0",
    "browserify": "^16.5.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jquery": "^3.5.0",
    "mocha": "^6.2.2",
    "mocha-junit-reporter": "^1.23.1",
    "moment": "^2.24.0",
    "proper-lockfile": "^4.1.1",
    "uuid": "^3.3.3"
  }
}
